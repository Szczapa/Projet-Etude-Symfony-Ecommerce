{% extends 'base.html.twig' %}

{% block title %}Mot de passe oubliée!{% endblock %}

{% block content %}
<form method="post">

    <h1 class="h3 mb-3 font-weight-normal">Réinitialiser le mot de passe</h1>
    <label for="inputEmail">Email</label>
    <input type="email" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>

    {% for message in app.flashes('notice') %}
    <div class="alert alert-info">{{message}}</div>
    {% endfor %}

    <button class="btn btn-lg btn-primary mt-3" type="submit">
        Valider
    </button>

    <p class="text-center">Ou souhaitez vous <a href="{{path('login')}}">vous connecter?</a></p>

</form>
{% endblock %}