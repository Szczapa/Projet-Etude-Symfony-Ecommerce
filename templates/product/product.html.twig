                    <h5 class="card-title">{{product.name}}</h5>
                    <p class="card-text"><small>{{product.subtitle}}</small></p>
                    <span> {{(product.prix / 100) | number_format (2,',')}}â‚¬</span></a>
                    
                </div>
            </div>
            </a>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}