{% extends 'base.html.twig' %}

{% block title %}Modification d'adresse{% endblock %}

{% block content %}
<a href="{{path('account_address')}}" class="text-decoration-none text-info">
    <img src="{{ asset ('assets/icon/back.png')}}" alt="Retour" height="15px">
    Mes adresses
</a>
<h1 class="mt-4"> <strong> Modifier mon adresse </strong></h1>
<hr>
<div class="container bottom">
    {{ form_start(form) }}
    <div class="row">
        <div class="col-md-12">{{ form_row(form.name) }}</div>
        <div class="col-md-6">{{ form_row(form.firstname) }}</div>
        <div class="col-md-6">{{ form_row(form.lastname) }}</div>
        <div class="col-md-12">{{ form_row(form.address) }}</div>
        <div class="col-md-4">{{ form_row(form.Company) }}</div>
        <div class="col-md-4">{{ form_row(form.postal) }}</div>
        <div class="col-md-4">{{ form_row(form.city) }}</div>
        <div class="col-md-6">{{ form_row(form.country) }}</div>
        <div class="col-md-6">{{ form_row(form.phone) }}</div>
    </div>

    {{ form_end(form) }}
</div>
{% endblock %}